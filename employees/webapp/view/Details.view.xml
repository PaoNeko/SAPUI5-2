<mvc:View   controllerName="com.logaligroup.employees.controller.Details"
            xmlns="sap.m"
            xmlns:uxap="sap.uxap"
            xmlns:core="sap.ui.core"
            xmlns:mvc="sap.ui.core.mvc">

    <uxap:ObjectPageLayout id="IDGenObjectPageLayout" >

        <uxap:headerTitle>
            
            <uxap:ObjectPageDynamicHeaderTitle id="_IDGenObjectPageDynamicHeaderTitle" >
                
                <uxap:expandedContent>

                    <HBox   id="IDGenHBox1" >

                        <HBox   id="IDGenHBox2" 
                                justifyContent="SpaceAround"
                                width="100%">
                            
                            <VBox   id="IDGenVBox1" 
                                    alignItems="Center"
                                    justifyContent="Center"
                                    width="7rem">

                                <Label  id="IDGenLabel5" 
                                        text="{i18n>country}:"/>
                                <Text   id="IDGenText5" 
                                        text="{northwind>Country}" />

                            </VBox>

                            <VBox   id="IDGenVBox2" 
                                    alignItems="Center"
                                    justifyContent="Center"
                                    width="7rem">

                                <Label  id="IDGenLabel6" 
                                        text="{i18n>city}:"/>
                                <Text   id="IDGenText6" 
                                        text="{northwind>City}" />

                            </VBox>

                            <VBox   id="IDGenVBox3" 
                                    alignItems="Center"
                                    justifyContent="Center"
                                    width="7rem">

                                <Label  id="IDGenLabel7" 
                                        text="{i18n>postalCode}:"/>
                                <Text   id="IDGenText7" 
                                        text="{northwind>PostalCode}" />

                            </VBox>
                        </HBox>
                    </HBox>

                </uxap:expandedContent>

                <uxap:snappedContent>
                    
                    <HBox   id="IDGenHBox3" >

                        <HBox   id="IDGenHBox4" 
                                justifyContent="SpaceAround"
                                width="100%">
                            
                            <VBox   id="IDGenVBox4" 
                                    alignItems="Center"
                                    justifyContent="Center"
                                    width="7rem">

                                <Label  id="IDGenLabel8" 
                                        text="{i18n>country}:"/>
                                <Text   id="IDGenText8" 
                                        text="{northwind>Country}" />

                            </VBox>

                            <VBox   id="IDGenVBox5" 
                                    alignItems="Center"
                                    justifyContent="Center"
                                    width="7rem">

                                <Label  id="IDGenLabel9" 
                                        text="{i18n>city}:"/>
                                <Text   id="IDGenText9" 
                                        text="{northwind>City}" />

                            </VBox>

                            <VBox   id="IDGenVBox6" 
                                    alignItems="Center"
                                    justifyContent="Center"
                                    width="7rem">

                                <Label  id="IDGenLabel10" 
                                        text="{i18n>postalCode}:"/>
                                <Text   id="IDGenText10" 
                                        text="{northwind>PostalCode}" />

                            </VBox>
                        </HBox>
                    </HBox>
                    
                </uxap:snappedContent>
                

                <uxap:expandedHeading>
                    <Title  id="IDGenTitle" 
                            text="{northwind>FirstName} {northwind>LastName} ({northwind>EmployeeID})"/>
                </uxap:expandedHeading>
                
                <uxap:snappedHeading>
                    <FlexBox    id="IDGenFlexBox" 
                                fitContainer="true"
                                alignItems="Center">
                        
                        <Title  id="IDGenTitle2" 
                            text="{northwind>FirstName} {northwind>LastName} ({northwind>EmployeeID})"/>

                    </FlexBox>
                </uxap:snappedHeading>

                <uxap:actions>
                    <Button id="IDGenButton1" 
                            text="{i18n>create}"
                            press="onCreatePress"
                            type="Emphasized"
                            width="6rem">
                    
                    </Button>
                    
                    <Button id="IDGenButton2" 
                            icon="sap-icon://decline"
                            press="onClosePress"
                            type="Reject"/>
                </uxap:actions>

            </uxap:ObjectPageDynamicHeaderTitle>

        </uxap:headerTitle>


        <uxap:headerContent>

        </uxap:headerContent>


        <uxap:sections>

            <uxap:ObjectPageSection id="IDGenObjectPageSection1" >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection  id="IDGenObjectPageSubSection1" 
                                                title="{i18n>incidence}">
                        <uxap:blocks>
                            <Panel id="tableIncidence" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection id="IDGenObjectPageSection2" >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection  id="IDGenObjectPageSubSection2" 
                                                title="{i18n>orders}">
                        <uxap:blocks>
                            <core:Fragment  id="IDGenFragment"  
                                            fragmentName="com.logaligroup.employees.fragment.Orders" 
                                            type="XML" />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

        </uxap:sections>

    </uxap:ObjectPageLayout>

</mvc:View>